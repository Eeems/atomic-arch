FROM eeems/atomic-arch:base

RUN \
  HOSTNAME=atomic \
  TIMEZONE=Canada/Mountain \
  KEYMAP=us \
  FONT=ter-124n \
  LANGUAGE=en_CA \
  ENCODING=UTF-8 \
  /usr/lib/system/setup_machine

# RUN /usr/lib/system/install_packages gnome

RUN fc-cache -f
RUN /usr/lib/system/build_kernel
ARG VERSION_ID
RUN /usr/lib/system/set_build_id
